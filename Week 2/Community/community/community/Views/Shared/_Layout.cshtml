<!DOCTYPE html>
<head>
    <title>CIT Lab Information</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">CIT Lab Information</a>
                </div>
                <ul class="nav navbar-nav">
                    <div class="btn-group mr-2" role="group" aria-label="Links">
                        <button onclick="location.href='@Url.Action("Index","Home")'" class="btn btn-success">Home</button>
                        <button onclick="location.href='@Url.Action("History","Home")'" class="btn btn-success">History</button>
                        <button onclick="location.href='@Url.Action("Contact","Home")'" class="btn btn-success">Contact</button>
                        <button onclick="location.href='@Url.Action("Index","Info")'" class="btn btn-success">Info</button>
                        <button onclick="location.href='@Url.Action("Locations","Info")'" class="btn btn-success">Locations</button>
                        <button onclick="location.href='@Url.Action("People","Info")'" class="btn btn-success">People</button>
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Tools">
                        <button onclick="location.href='@Url.Action("Messages","Home")'" class="btn btn-primary">Messages</button>
                    </div>
                </ul>
            </div>
        </nav>

        <div class="jumbotron">
            @RenderBody()
         </div>
    </div>
</body>
</html>
